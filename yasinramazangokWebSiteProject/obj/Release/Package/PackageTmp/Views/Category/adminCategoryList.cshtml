@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "adminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{ string color = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 18%">
                                Kategori Adı
                            </th>
                            <th style="width: 15%">
                                Son Yazanlar
                            </th>
                            @*<th style="width: 20%">
                                Kategori Bar
                            </th>*@
                            <th style="width: 10%" class="text-center">
                                Kategori Durumu
                            </th>
                            <th style="width: 13%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.status == true)
                            {
                                color = "post-category text-white bg-success mb-3";
                            }
                            if (item.status == false)
                            {
                                color = "post-category text-white bg-danger mb-3";
                            }
                            <tr>
                                <td>@item.id</td>
                                <td>@item.name</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">
                                        </li>
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">
                                        </li>
                                    </ul>
                                </td>
                                @*<td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                        </div>
                                    </div>
                                    <small>
                                        57% Complete
                                    </small>
                                </td>*@
                                <td class="project-state">
                                    <span class="badge badge-@color">@item.status</span>
                                </td>
                                <td>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Blog/blogByCategory/@item.id">
                                        <i class="fas fa-folder">
                                        </i>
                                        Bloglar
                                    </a>
                                    <a class="btn btn-outline-info btn-sm" href="/Category/categoryEdit/@item.id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" href="/Category/changeStatusFalse/@item.id">
                                        <i class="fas fa-check-circle-o">
                                        </i>
                                        Pasif Yap
                                    </a>
                                    <a class="btn btn-outline-success btn-sm" href="/Category/changeStatusTrue/@item.id">
                                        <i class="fas fa-check-circle">
                                        </i>
                                        Aktif Et
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
    <button class="btn btn-outline-warning" data-toggle="modal" data-target="#Modal1">Yeni Kategori Ekle</button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Yeni Kategori</h2>
                </div>
                <form method="post" action="/Category/addCategoryOnAdmin/">
                    <div class="modal-body">
                        <label>Kategori Adı</label>
                        <input type="text" name="name" class="form-control" />
                        <br />
                        <label>Kategori Açıklama</label>
                        <input type="text" name="description" class="form-control" />
                        <br />
                        <button class="btn btn-outline-warning">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

