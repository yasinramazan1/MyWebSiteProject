<!-- BLOG DETAYLARI KATEGORİ LİSTESİ -->
@model IEnumerable<EntityLayer.Concrete.Category>
<div class="sidebar-box">
    <h3 class="heading">Kategoriler</h3>
    <ul class="categories">
        @foreach (var item in Model)
        {
            if (item.status == true)
            {
                <li><a href="/Blog/blogByCategory/@item.id">@item.name<span></span></a></li>
            }

        }
    </ul>
</div>

