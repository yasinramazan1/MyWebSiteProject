@model IEnumerable<EntityLayer.Concrete.Author>
<div class="tab-pane" id="settings">
    @foreach (var item in Model)
    {
        <form class="form-horizontal">
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputName" value="@item.name">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail" value="@item.mail">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputName2" value="@item.job">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputExperience" class="col-sm-2 col-form-label">Yazarın Mesajı</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputName2" value="@item.aboutShort">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkills" value="@item.phoneNumber">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkills" value="@item.image">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkills" value="@item.password">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkills">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkills" value="@item.about">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Şifremi değiştirmek istiyorum
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Bilgilerimi Güncelle</button>
                </div>
            </div>
        </form>
    }
</div>