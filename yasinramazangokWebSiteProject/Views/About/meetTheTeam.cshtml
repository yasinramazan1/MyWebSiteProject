<!-- Hakkımızda sayfasındaki takımımızla tanışın bölümünün görüntülenmesi bu view ile sağlanmaktadır. -->
@model IEnumerable<EntityLayer.Concrete.Author>
<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Yazarlarımız</h2>
                <p>Yazarlarımız sizler için üretiyorlar. Siz de bir yazarımız olmak isterseniz bizimle iletişime geçebilirsiniz. </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5 text-center">
                    <img src="@item.image" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                    <h2 class="mb-3 h5">@item.name</h2>
                    <p>@item.about</p>

                    <p class="mt-5">
                        <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                        <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                        <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                    </p>
                </div>
            }
        </div>

    </div>
</div>

