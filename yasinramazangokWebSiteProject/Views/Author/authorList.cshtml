<!-- Admin panelinde yazarların listelenmesi, kontrolü ve düzenlenmesi için ana index ve view burasıdır.-->
@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "authorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content">
            <!-- Default box -->
            
                <div class="card card-solid">

                    <div class="card-body pb-0">

                        <div class="row d-flex align-items-stretch">
                            @foreach (var item in Model)
                            {
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                    <div class="card bg-light">
                                        <div class="card-header text-muted border-bottom-0">
                                            @item.job
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@item.name</b></h2>
                                                    <p class="text-muted text-sm">@item.aboutShort</p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-address-book"></i></span>@item.mail</li>                                                        
                                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>Telefon: @item.phoneNumber</li>
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <img src="@item.image" alt="" class="img-circle img-fluid">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a href="/Blog/authorBlogList/@item.id" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i> Yazarın Blogları
                                                </a>
                                                <a href="/Author/authorEdit/@item.id" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-user"></i>Profili Düzenle
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                            </div>

                    </div>

                </div>
        
            <!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</body>
</html>
<a href="/Author/addNewAuthor/" class="btn btn-danger">Yeni Yazar Ekle</a>

