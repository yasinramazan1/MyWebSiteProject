@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "updateAboutList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımızda Sayfa Düzenlemesi</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("updateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="form-group">
                                    <label for="inputName">ID</label>
                                    <input type="text" name="id" class="form-control" value="@item.id">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Görsel 1</label>
                                    <input type="text" name="image1" class="form-control" value="@item.image1">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Görsel 2</label>
                                    <input type="text" name="image2" class="form-control" value="@item.image2">
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 1</label>
                                    <textarea name="content1" class="form-control" rows="4">@item.content1</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 2</label>
                                    <textarea name="content2" class="form-control" rows="4">@item.content2</textarea>
                                </div>
                                @*<div class="form-group">
                <label for="inputStatus">Status</label>
                <select class="form-control custom-select">
                    <option selected disabled>Select one</option>
                    <option>On Hold</option>
                    <option>Canceled</option>
                    <option selected>Success</option>
                </select>
                Burası bir dropdownlisttir, ileride belki yeni bir özellik eklerken kulllanılabilir.
            </div>*@
                            }
                            <button class="btn btn-outline-warning">Güncelle</button>
                        </div>
                    }
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
</body>
</html>



