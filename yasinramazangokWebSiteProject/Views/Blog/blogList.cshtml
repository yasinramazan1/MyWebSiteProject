<!-- Blogların ana sayfada listelendiği partial burasıdır. -->
@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="single.html"><img src="@item.image" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">@item.category.name</span>
                            <h2><a href="single.html">@item.title</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="/miniblog/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1"><a href="#">@item.author.name</a></span>
                                <span>&nbsp;-&nbsp; @item.date</span>
                            </div>
                            <p>@item.content</p>
                            <p><a href="#">Read More</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
