<!-- Bloglardaki sağ tarafta kategori isimlerinin listelenmesini sağlayan view burasıdır! -->
@model IEnumerable<EntityLayer.Concrete.Category>
<div class="sidebar-box">
    <h3 class="heading">Kategoriler</h3>
    <ul class="categories">
        @foreach (var item in Model)
        {
            <li><a href="#">@item.name<span>(10)</span></a></li>
        }
    </ul>
</div>

