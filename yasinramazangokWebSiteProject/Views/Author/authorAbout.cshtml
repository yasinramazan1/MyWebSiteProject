<!-- Bu view ile bloglarda sağ taraftaki yazar bilgisini görüntülemekteyiz.-->
@model IEnumerable<EntityLayer.Concrete.Blog>
@foreach (var item in Model)
{
    <div class="sidebar-box">
        <div class="bio text-center">
            <img src="@item.author.image" alt="Image Placeholder" class="img-fluid mb-5">
            <div class="bio-body">
                <h2>@item.author.name</h2>
                <p class="mb-4">@item.author.about</p>
                <p><a href="/Blog/Index/" class="btn btn-primary btn-sm rounded px-4 py-2">Bloglar</a></p>        
            </div>
        </div>
    </div>
}
